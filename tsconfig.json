{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es6",
    "outDir": ".build",
    "module": "CommonJS",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "rootDir": "./",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": ["**/node_modules", "**/test"]
}
